#include <malloc.h>
#include <string.h>
#include <stdio.h>
#include <locale.h>


const int Size = 1000;

int combination(int k, int n, int **mass)
{
	if (mass[k][n] >= 0)
		return mass[k][n];

	if (n < k)
		mass[k][n] = 0;
	else if (k == n || k == 0)
		mass[k][n] = 1;
	else if (k == 1)
		mass[k][n] = n;
	else
		mass[k][n] = combination(k - 1, n - 1, mass) + combination(k, n - 1, mass);
	return mass[k][n];
}


int main()
{
	setlocale(LC_ALL, "Russian");

	int n;
	int k;
	printf("Введите количество элементов ИЗ которых будем выбирать (n) ");
	scanf_s("%d", &n);
	printf("Ведите количество элементов которые будем выбирать (k) ");
	scanf_s("%d", &k);

	int **Array = (int**)malloc(Size * sizeof(int*));
	for (int i = 0; i < Size; i++)
	{
		Array[i] = (int*)malloc(Size * sizeof(int));
		memset(Array[i], -1, Size * sizeof(int));
	}

	combination(k, n, Array);

	printf("Количество сочетаний: %d", combination(k, n, Array));

	for (int i = 0; i <n; i++)
	{
		free(Array[i]);
	}
	free(Array);
	getchar();
	getchar();
	return 0;
}
